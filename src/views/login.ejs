<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login</title>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
        <link rel="stylesheet" href="css/stylesLogin.css">
        <link rel="stylesheet" href="/css/footerHeader.css">
        <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
        <style>
            @import url('https://fonts.googleapis.com/css2?family=Lora&display=swap');
        </style>
    </head>
<body>
    <%- include('./partials/header') %>

    <main>
        <section class="ingreso">
            <form action="/login" method="POST" class="login">
                <h2>Ingresar</h2>
                <div class="errores">
                    <ul>

                    </ul>
                </div>
                    <input type="email" id="usuario" name="email"  placeholder="Email">
                    <% if (locals.errors && errors.email) { %>
                        <div> <%= errors.email.msg %> </div>
                    <% } %>

                    <input type="password" id="contraseña" name="password"  placeholder="Ingresar Contraseña">

                    <label for="interes" class="remember">
                        <input type="checkbox" name="remember" value="interes" >¿Recordar cuenta?
                    </label>
                    <div class="botones" id="botons">
                        <button type="submit" >Ingresar</button>
                    </div>
                    <a href="/register">Crear Cuenta</a>
            </form>
        </section>
    </main>


    <%- include('./partials/footer') %>

    <script src="/js/validacionesL.js"></script>

</body>
</html>